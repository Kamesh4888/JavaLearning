//String builders and string formatters

package program21;

public class pgm21 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		String text;
		
		text = "Hi";
		text+="Hello";
		text += "\t This is Kamesh";
		System.out.println(text);
		
		//String info;
		//Info info=new Info();
	StringBuilder info = new StringBuilder();
	
	info.append("Welcome \t");
	info.append("This is practice");
	
System.out.println(info);

//String formatter

System.out.printf("cost is %d \n", 50);
System.out.printf("Decimal value upto two digits is %.2f \n" , 35.26742);

for(int i=0;i<20;i++)
{
	System.out.printf("%2d \n",i );
	
}
	}

}
